<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patrick.halitranapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HalitranApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity android:name=".LoginActivityNew" android:theme="@style/AppTheme_Dark"/>
        <activity android:name=".ForgotMdpActivity" android:theme="@style/AppTheme_Dark"/>
        <activity android:name=".RegisterActivityNew" android:theme="@style/AppTheme_Dark"/>

        <activity android:name=".GetMessageActivity" /><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>